FROM archlinux

ARG USER=ci

RUN useradd -m ${USER} \
    && echo "${USER} ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

RUN pacman -Sy && pacman -S \
		base-devel curl git \
		make gcc unzip \
		clang lld ninja sudo \
		python python-pipx \
		--noconfirm \
		&& pipx install conan \ 
 		&& sudo -u ci echo 'export PATH=$PATH:/root/.local/bin' >> ~/.bashrc \
		&& sudo -u ci conan

WORKDIR /home/${USER}/workspace
